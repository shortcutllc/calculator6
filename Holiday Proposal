<script>
// FAQ Accordion
document.querySelectorAll('.faq-question').forEach(question => {
  question.addEventListener('click', () => {
    const content = question.nextElementSibling;
    const isOpen = content.classList.contains('open');
    
    // Close all other FAQs
    document.querySelectorAll('.faq-content').forEach(c => c.classList.remove('open'));
    document.querySelectorAll('.faq-question span:last-child').forEach(s => s.textContent = '+');
    
    // Toggle current FAQ
    if (!isOpen) {
      content.classList.add('open');
      question.querySelector('span:last-child').textContent = 'âˆ’';
    }
  });
});

// Smooth scrolling for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', function (e) {
    e.preventDefault();
    const target = document.querySelector(this.getAttribute('href'));
    if (target) {
      target.scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
    }
  });
});

// Services Slider Functionality
document.addEventListener('DOMContentLoaded', function() {
  const serviceAreas = document.querySelectorAll('[data-service]');
  const serviceDetails = document.getElementById('service-details');
  
  // Service data
  const services = {
    massage: {
      title: 'Massage Therapy',
      description: 'Professional on-site massage therapy to reduce stress, improve circulation, and boost employee well-being. Our licensed therapists bring the spa experience directly to your office.',
      benefits: [
        'Stress reduction and relaxation',
        'Improved circulation and posture', 
        'Reduced muscle tension and pain',
        'Enhanced focus and productivity'
      ],
      price: 'Starting at $85/person',
      video: './frontend/public/services/massage.mp4',
      color: '#FF5050'
    },
    hair: {
      title: 'Hair & Beauty',
      description: 'Professional hair styling, cuts, and beauty treatments delivered right to your office. Keep your team looking and feeling their best without leaving work.',
      benefits: [
        'Professional haircuts and styling',
        'Beauty treatments and makeup',
        'Convenient office appointments',
        'Boosted confidence and morale'
      ],
      price: 'Starting at $65/person',
      video: './frontend/public/services/haircut.mp4',
      color: '#0098AD'
    },
    headshots: {
      title: 'Professional Headshots',
      description: 'High-quality corporate headshots for your team\'s professional profiles. Perfect for LinkedIn, company websites, and marketing materials.',
      benefits: [
        'Professional lighting and setup',
        'Multiple poses and angles',
        'High-resolution digital files',
        'Quick turnaround time'
      ],
      price: 'Starting at $95/person',
      video: './frontend/public/services/headshot.mp4',
      color: '#9EFAFF'
    },
    mindfulness: {
      title: 'Mindfulness Sessions',
      description: 'Guided meditation and mindfulness practices to help your team manage stress, improve focus, and enhance overall mental wellness.',
      benefits: [
        'Guided meditation sessions',
        'Stress management techniques',
        'Breathing exercises',
        'Improved focus and clarity'
      ],
      price: 'Starting at $45/person',
      video: './frontend/public/services/mindfulness.mp4',
      color: '#F7BBFF'
    },
    nails: {
      title: 'Nail Services',
      description: 'Professional manicures and nail care services to keep your team looking polished and professional. Perfect for maintaining a well-groomed appearance.',
      benefits: [
        'Professional manicures',
        'Nail shaping and filing',
        'Polish application',
        'Hand and nail care'
      ],
      price: 'Starting at $35/person',
      video: './frontend/public/services/manicure.mp4',
      color: '#FEDC64'
    }
  };
  
  serviceAreas.forEach(area => {
    area.addEventListener('click', function() {
      const serviceType = this.getAttribute('data-service');
      const service = services[serviceType];
      
      if (service) {
        // Update service details panel
        document.getElementById('service-title').textContent = service.title;
        document.getElementById('service-description').textContent = service.description;
        document.getElementById('service-price').textContent = service.price;
        document.getElementById('service-price').style.color = service.color;
        
        // Update benefits
        const benefitsContainer = document.getElementById('service-benefits');
        benefitsContainer.innerHTML = '';
        service.benefits.forEach(benefit => {
          const benefitDiv = document.createElement('div');
          benefitDiv.className = 'flex items-center gap-3';
          benefitDiv.innerHTML = `
            <span class="w-2 h-2 rounded-full" style="background: ${service.color};"></span>
            <span style="color: #09364F;">${benefit}</span>
          `;
          benefitsContainer.appendChild(benefitDiv);
        });
        
        // Update video
        const video = document.getElementById('service-video');
        const videoContainer = document.getElementById('service-video-container');
        video.querySelector('source').src = service.video;
        videoContainer.style.background = service.color;
        video.load();
        
        // Show details panel
        serviceDetails.classList.remove('hidden');
        
        // Scroll to details panel
        serviceDetails.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
    
    // Hover effects for overlay
    area.addEventListener('mouseenter', function() {
      const overlay = this.querySelector('.service-overlay');
      if (overlay) {
        overlay.classList.remove('hidden');
      }
    });
    
    area.addEventListener('mouseleave', function() {
      const overlay = this.querySelector('.service-overlay');
      if (overlay) {
        overlay.classList.add('hidden');
      }
    });
  });
});

// Header scroll behavior
window.addEventListener('scroll', function() {
  const header = document.getElementById('header');
  const logoSvg = document.getElementById('logo-svg');
  const ctaButton = document.getElementById('cta-button');
  
  if (window.scrollY > 100) {
    // Scrolled - turn white
    header.style.backgroundColor = 'rgba(255, 255, 255, 0.95)';
    header.style.backdropFilter = 'blur(10px)';
    header.style.borderBottom = '1px solid rgba(0, 55, 86, 0.08)';
    
    // Change logo color to dark
    const paths = logoSvg.querySelectorAll('path');
    paths.forEach(path => {
      path.setAttribute('fill', path.getAttribute('fill') === '#FF5050' ? '#FF5050' : '#003756');
    });
    
    // Change CTA button
    ctaButton.style.backgroundColor = '#9EFAFF';
    ctaButton.style.color = '#003C5E';
  } else {
    // At top - transparent
    header.style.backgroundColor = 'transparent';
    header.style.backdropFilter = 'none';
    header.style.borderBottom = 'none';
    
    // Change logo color to cream
    const paths = logoSvg.querySelectorAll('path');
    paths.forEach(path => {
      path.setAttribute('fill', path.getAttribute('fill') === '#FF5050' ? '#FF5050' : '#EFE0C0');
    });
    
    // Change CTA button
    ctaButton.style.backgroundColor = '#EFE0C0';
    ctaButton.style.color = '#214C42';
  }
});

// Horizontal scroll navigation
function scrollToNextService() {
  const scrollContainer = document.querySelector('.services-scroll');
  const currentScroll = scrollContainer.scrollLeft;
  const slideWidth = scrollContainer.clientWidth;
  
  // Scroll to next slide
  scrollContainer.scrollTo({
    left: currentScroll + slideWidth,
    behavior: 'smooth'
  });
}

function scrollToPrevService() {
  const scrollContainer = document.querySelector('.services-scroll');
  const currentScroll = scrollContainer.scrollLeft;
  const slideWidth = scrollContainer.clientWidth;
  
  // Scroll to previous slide
  scrollContainer.scrollTo({
    left: currentScroll - slideWidth,
    behavior: 'smooth'
  });
}

// Update navigation arrows based on scroll position
function updateNavigationArrows() {
  const scrollContainer = document.querySelector('.services-scroll');
  const leftNav = document.getElementById('left-nav');
  const rightNav = document.getElementById('right-nav');
  const slideWidth = scrollContainer.clientWidth;
  const currentScroll = scrollContainer.scrollLeft;
  
  // Service names in order
  const services = ['Massage', 'Headshots', 'Holiday Party Glam', 'Seasonal Mindfulness', 'Festive Nail Care'];
  const currentSlide = Math.round(currentScroll / slideWidth);
  const leftLabel = leftNav.querySelector('div:first-child');
  const rightLabel = rightNav.querySelector('div:first-child');
  
  // Show/hide left arrow based on scroll position
  if (currentScroll > 50) {
    leftNav.style.opacity = '1';
    if (currentSlide > 0) {
      leftLabel.textContent = services[currentSlide - 1];
    }
  } else {
    leftNav.style.opacity = '0';
  }
  
  // Show/hide right arrow based on scroll position
  if (currentScroll >= (services.length - 1) * slideWidth - 50) {
    rightNav.style.opacity = '0';
  } else {
    rightNav.style.opacity = '1';
    if (currentSlide < services.length - 1) {
      rightLabel.textContent = services[currentSlide + 1];
    }
  }
}

// Add scroll listener for navigation updates
document.addEventListener('DOMContentLoaded', function() {
  const scrollContainer = document.querySelector('.services-scroll');
  if (scrollContainer) {
    scrollContainer.addEventListener('scroll', updateNavigationArrows);
  }
});
</script>

</body>
</html>
